    chown system system /sys/devices/virtual/input/lge_sar_rf2/regproxdata
    chown system system /sys/devices/virtual/input/lge_sar_rf2/proxstatus
    chown system system /sys/devices/virtual/input/lge_sar_rf2/check_far
