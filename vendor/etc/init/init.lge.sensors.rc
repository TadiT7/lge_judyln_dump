    chown system system /sys/devices/virtual/input/lge_sar_rf/check_mid

    chmod 664 /sys/devices/virtual/input/lge_sar_rf/regreset
    chmod 664 /sys/devices/virtual/input/lge_sar_rf/onoff
    chmod 664 /sys/devices/virtual/input/lge_sar_rf/checkallnear
    chmod 664 /sys/devices/virtual/input/lge_sar_rf/docalibration
