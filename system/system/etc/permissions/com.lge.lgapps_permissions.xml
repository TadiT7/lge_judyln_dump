    <allow-lg-bg-service package="com.lge.music" />
    <allow-lg-bg-service package="com.lge.camera" />
    <allow-lg-bg-service package="com.android.contacts" />
    <allow-lg-bg-service package="com.android.providers.contacts" />
    <allow-lg-bg-service package="com.lge.onehandcontroller" />
    <allow-lg-bg-service package="com.lge.phonemanagement" />
    <allow-lg-bg-service package="com.lge.springcleaning" />
    <allow-lg-bg-service package="com.lge.ia.task.smartcare" />
    <allow-lg-bg-service package="com.lge.gestureanswering" />
    <allow-lg-bg-service package="com.lge.appbox.client" />
    <allow-lg-bg-service package="com.lge.smartsharepush" />
    <allow-lg-bg-service package="com.lge.gallery.collagewallpaper" />
