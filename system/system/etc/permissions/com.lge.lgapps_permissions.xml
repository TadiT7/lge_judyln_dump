    <allow-lg-bg-service package="com.lge.networksettings" />
    <allow-lg-bg-service package="com.lge.fmradio.appwidget" />
    <allow-lg-bg-service package="com.lge.fmradio" />
    <allow-lg-bg-service package="com.lge.briefing" />
    <allow-lg-bg-service package="com.lge.gallery.contentservice" />
    <allow-lg-bg-service package="com.lge.autosimlockservice" />
    <allow-lg-bg-service package="com.lge.lgassistant.VoiceAssistantService" />

    <!-- These are the packages that are white-listed to be able to
         run background location without throttling. -->
    <allow-unthrottled-location package="com.lge.sizechangable.weather.platform" />


    <!-- These are the packages that are granted permission
         to access the notifications by default. -->
    <default-enabled-notification-listener-app package="com.lge.coneshortcut"
            class="com.lge.coneshortcut.NotificationListener" />
    <default-enabled-notification-listener-app package="com.lge.easyhome"
            class="com.lge.easyhome.notification.NotificationListener" />

</permissions>
